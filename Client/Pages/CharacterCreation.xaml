<Page x:Class="Client.Pages.CharacterCreation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      xmlns:viewModels="clr-namespace:Client.ViewModels"
      d:DataContext="{d:DesignInstance viewModels:CharacterCreationViewModel}"
      mc:Ignorable="d"
      Name="CharacterCreationPage"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterCreation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Background="#222" Grid.Row="1" ItemsSource="{Binding ElementName=CharacterCreationPage, Path=ViewModel.Classes}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="300" Height="400" BorderThickness="1" BorderBrush="OrangeRed">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Artwork}" Stretch="Fill"/>
                        </Border.Background>
                        <Grid Background="#55000000" Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Width="50" Height="50" Source="{Binding Icon}"/>
                                <TextBlock Grid.Column="1" Margin="10,0,0,0" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Text="{Binding Name}"/>
                            </Grid>

                            <TextBlock Grid.Row="1" Margin="5" TextWrapping="WrapWithOverflow" FontStyle="Italic" Text="{Binding Description}"/>                            

                            <Grid Grid.Row="2" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" FontWeight="Bold" Text="Trefferwürfel:"/>
                                <TextBlock Grid.Row="1" Text="{Binding HitDice}" TextWrapping="WrapWithOverflow"/>
                            </Grid>

                            <Grid Grid.Row="3" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontWeight="Bold" Text="Primäres Attribut:"/>
                                <TextBlock Grid.Row="1" Text="{Binding PrimaryAbility}" TextWrapping="WrapWithOverflow"/>
                            </Grid>

                            <Grid Grid.Row="4" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontWeight="Bold" Text="Waffen-Übungsbonus:"/>
                                <TextBlock Grid.Row="1" Text="{Binding WeaponProficiencies}" TextWrapping="WrapWithOverflow"/>
                            </Grid>

                            <Grid Grid.Row="5" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontWeight="Bold" Text="Rüstung-Übungsbonus:"/>
                                <TextBlock Grid.Row="1" Text="{Binding ArmorProficiencies}" TextWrapping="WrapWithOverflow"/>
                            </Grid>
                        </Grid>
                    </Border>                    
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>

                <fa:IconImage Icon="DiceD20" Margin="2" Foreground="{Binding ElementName=DiceRollerControl, Path=ViewModel.Colors[18]}"/>
                <fa:IconImage Icon="DiceD20" Margin="2" Foreground="{Binding ElementName=DiceRollerControl, Path=ViewModel.Colors[19]}"/>
            </StackPanel>

            <Border Width="50" Background="#222" Margin="2" CornerRadius="4">
                <TextBlock Text="{Binding ElementName=DiceRollerControl, Path=ViewModel.RolledNumber}" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>

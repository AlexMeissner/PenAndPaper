<UserControl x:Class="Client.Controls.MapGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Controls"
             mc:Ignorable="d" 
             Background="Transparent"
             Loaded="OnLoaded"
             d:DesignHeight="400" d:DesignWidth="400">
    <Canvas Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ActualWidth}" 
            Height="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ActualHeight}" 
            Name="GridCanvas" 
            Background="Transparent"/>
</UserControl>

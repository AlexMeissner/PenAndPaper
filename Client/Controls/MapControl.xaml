        <ItemsControl Grid.ColumnSpan="3" Grid.RowSpan="3" ItemsSource="{Binding Tokens.Items}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:ZoomableCanvasControl x:Name="ZoomableCanvas">

                    </controls:ZoomableCanvasControl>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="Test" Background="Red"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Height="50" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="50" Margin="2" Visibility="Collapsed">
                    <fa:IconImage Icon="UserAlt" ToolTip="Charakter"/>
                </Button>
                <Button Width="50" Margin="2" MouseEnter="OnShowDice" MouseLeave="OnHideDice">
                    <fa:IconImage Icon="DiceD20" ToolTip="Würfeln"/>
                </Button>
                <Button Width="50" Margin="2" Click="OnOpenSettings">
                    <fa:IconImage Icon="Gear" ToolTip="Einstellungen"/>
                </Button>
                <Button Width="50" Margin="2" Visibility="Collapsed">
                    <fa:IconImage Icon="BookOpen" ToolTip="Lexikon"/>
                </Button>
            </StackPanel>
            <StackPanel Height="50" HorizontalAlignment="Center" Orientation="Horizontal" Name="DicePanel" Visibility="Collapsed">
                <Button Width="50" FontSize="25" Margin="2" Content="D4" Click="OnRollD4"/>
                <Button Width="50" FontSize="25" Margin="2" Content="D6" Click="OnRollD6"/>
                <Button Width="50" FontSize="25" Margin="2" Content="D8" Click="OnRollD8"/>
                <Button Width="50" FontSize="25" Margin="2" Content="D10" Click="OnRollD10"/>
                <Button Width="50" FontSize="25" Margin="2" Content="D12" Click="OnRollD12"/>
                <Button Width="50" FontSize="25" Margin="2" Content="D20" Click="OnRollD20"/>
            </StackPanel>
            <ContentPresenter Name="DiceRollerPresenter" HorizontalAlignment="Center" Visibility="Visible"/>
        </StackPanel>



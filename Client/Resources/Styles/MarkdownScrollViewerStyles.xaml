<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml">

    <Style x:Key="BaseMarkdownScrollViewer" TargetType="mdxaml:MarkdownScrollViewer">
        <Style.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource DefaultScrollbar}"/>
        </Style.Resources>
        <Setter Property="Foreground" Value="{StaticResource Theme_Color_Font_1}"/>
    </Style>

    <Style x:Key="DefaultMarkdownScrollViewer" TargetType="mdxaml:MarkdownScrollViewer" BasedOn="{StaticResource BaseMarkdownScrollViewer}"/>

</ResourceDictionary>

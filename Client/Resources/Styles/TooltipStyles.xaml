<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseToolTip" TargetType="ToolTip" >
        <Setter Property="Background" Value="{DynamicResource Theme_Color_Background_Transparent}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme_Color_Font_1}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme_Color_Font_2}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="ToolTip" BasedOn="{StaticResource BaseToolTip}">        
        
    </Style>

</ResourceDictionary>
    
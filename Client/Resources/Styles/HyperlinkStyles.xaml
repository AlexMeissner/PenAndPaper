<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseHyperlink" TargetType="Hyperlink">
        
    </Style>

    <Style x:Key="LoginHyperlink" TargetType="Hyperlink" BasedOn="{StaticResource BaseHyperlink}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme_Color_Secondary_1}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource Theme_Color_Secondary_2}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>